<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.TreeRequestPage"
             BackgroundColor="#1E1E1E"
             Title="Request Trees">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">

			<Label Text="🌳 Tree Request Form"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

			<!-- Zone -->
			<Entry x:Name="ZoneEntry"
                   Placeholder="Enter Zone / Area"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Tree Type -->
			<Entry x:Name="TreeTypeEntry"
                   Placeholder="Enter Tree Type (e.g. Mango, Neem)"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Quantity -->
			<Entry x:Name="QuantityEntry"
                   Placeholder="Number of Trees"
                   Keyboard="Numeric"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Purpose -->
			<Editor x:Name="PurposeEditor"
                    Placeholder="Enter purpose (e.g. Plantation Drive, School Project)"
                    PlaceholderColor="Gray"
                    TextColor="White"
                    BackgroundColor="#2A2A2A"
                    AutoSize="TextChanges"
                    HeightRequest="100"/>

			<!-- Required Date -->
			<DatePicker x:Name="RequestDatePicker"
                        TextColor="White"
                        BackgroundColor="#2A2A2A"
                        Format="dd MMM yyyy"/>

			<!-- Proof Upload -->
			<Button Text="📷 Upload Proof (Optional)"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnUploadProofClicked"/>

			<Image x:Name="ProofImage"
                   IsVisible="False"
                   HeightRequest="200"
                   Aspect="AspectFit"/>

			<!-- Buttons -->
			<Button Text="📩 Submit Request"
                    BackgroundColor="Teal"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnSubmitClicked"/>

			<Button Text="Cancel"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnCancelClicked"/>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
