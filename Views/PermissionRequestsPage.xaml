<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.PermissionRequestsPage"
             BackgroundColor="#1E1E1E"
             Title="Permission Requests">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">

			<Label Text="📝 Pending Permission Requests"
                   FontSize="24"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

			<CollectionView x:Name="RequestsCollectionView">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Frame BackgroundColor="#2A2A2A"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5">
							<VerticalStackLayout>
								<Label Text="{Binding ZoneName}"
                                       FontSize="18"
                                       TextColor="White"
                                       FontAttributes="Bold"/>
								<Label Text="{Binding Action}"
                                       FontSize="14"
                                       TextColor="Orange"/>
								<Label Text="{Binding PermissionFrom}"
                                       FontSize="14"
                                       TextColor="LightBlue"/>
								<Label Text="{Binding RequestedBy}"
                                       FontSize="14"
                                       TextColor="Gray"/>

								<HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
									<Button Text="Approve"
                                            BackgroundColor="Green"
                                            TextColor="White"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            Clicked="OnApproveClicked"
                                            CommandParameter="{Binding .}"/>
									<Button Text="Reject"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            Clicked="OnRejectClicked"
                                            CommandParameter="{Binding .}"/>
								</HorizontalStackLayout>
							</VerticalStackLayout>
						</Frame>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

			<Label Text="📜 Approved/Rejected History"
                   FontSize="24"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

			<CollectionView x:Name="HistoryCollectionView">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Frame BackgroundColor="#333"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5">
							<VerticalStackLayout>
								<Label Text="{Binding ZoneName}"
                                       FontSize="18"
                                       TextColor="White"
                                       FontAttributes="Bold"/>
								<Label Text="{Binding Action}"
                                       FontSize="14"
                                       TextColor="Orange"/>
								<Label Text="{Binding PermissionFrom}"
                                       FontSize="14"
                                       TextColor="LightBlue"/>
								<Label Text="{Binding StatusDisplay}"
                                       FontSize="14"
                                       TextColor="Yellow"/>
								<Label Text="{Binding DecisionTime}"
                                       FontSize="12"
                                       TextColor="Gray"/>
							</VerticalStackLayout>
						</Frame>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

			<Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
