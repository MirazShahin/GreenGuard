<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.InternalRegistrationPage"
             BackgroundColor="#1E1E1E"
             Title="Internal Registration">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="🧍‍♂️ Internal User Registration"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="LightGreen"
                   HorizontalOptions="Center"/>
			<!-- Role Picker -->
			<Picker x:Name="RolePicker"
                    Title="Select Role"
                    TextColor="White"
                    TitleColor="Gray"
                    BackgroundColor="#2A2A2A">
				<Picker.Items>
					<x:String>Admin</x:String>
					<x:String>Leader</x:String>
					<x:String>Volunteer</x:String>
				</Picker.Items>
			</Picker>

            <!-- Full Name -->
            <Entry x:Name="NameEntry"
                   Placeholder="Full Name"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

            <!-- Email -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Email Address"
                   Keyboard="Email"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

            <!-- Password -->
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

            <!-- Zone (optional for Volunteer/Leader) -->
            <Entry x:Name="ZoneEntry"
                   Placeholder="Zone (only for Leader/Volunteer)"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

            <!-- Register Button -->
            <Button Text="Register"
                    BackgroundColor="Teal"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnRegisterClicked"/>

            <!-- Back Button -->
            <Button Text="Back to Login"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
