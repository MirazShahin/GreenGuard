<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.ExternalRegistrationPage"
             BackgroundColor="#1E1E1E"
             Title="External Registration">

	<ScrollView>
		<VerticalStackLayout Padding="30" Spacing="20">

			<Label Text="🌍 External User Registration"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="LightGreen"
                   HorizontalOptions="Center"/>

			<!-- Role Picker -->
			<Picker x:Name="RolePicker"
                    Title="Select Role"
                    TextColor="White"
                    TitleColor="Gray"
                    BackgroundColor="#2A2A2A"
                    SelectedIndexChanged="OnRoleChanged">
				<Picker.Items> 
					<x:String>NGO</x:String>
					<x:String>Personal User</x:String>
				</Picker.Items>
			</Picker>

			<!-- Name -->
			<Entry x:Name="NameEntry"
                   Placeholder="Full Name / Organization"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Email -->
			<Entry x:Name="EmailEntry"
                   Placeholder="Email Address"
                   Keyboard="Email"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Password -->
			<Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Organization Name -->
			<Entry x:Name="OrganizationEntry"
                   Placeholder="Organization Name (only for NGO)"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"
                   IsEnabled="False"
                   Opacity="0.5"/>

			<!-- Register Button -->
			<Button Text="Register"
                    BackgroundColor="MediumPurple"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnRegisterClicked"/>

			<Button Text="Back to Login"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
