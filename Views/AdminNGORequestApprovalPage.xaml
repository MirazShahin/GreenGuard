<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GreenGuard.Views.AdminNGORequestApprovalPage"
    BackgroundColor="#1E1E1E"
    Title="NGO Requests">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="🌿 NGO Plantation Requests"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="RequestCollectionView"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16" Margin="0,10">
                            <VerticalStackLayout>
                                <Label Text="{Binding NGOName}" FontSize="18" TextColor="LightGreen" FontAttributes="Bold"/>
                                <Label Text="{Binding Zone}" FontSize="14" TextColor="White"/>
                                <Label Text="{Binding Location}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding TreeType}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding TreeCount, StringFormat='Requested Trees: {0}'}" FontSize="14" TextColor="Orange"/>
                                <Label Text="{Binding Purpose}" FontSize="14" TextColor="LightGray"/>
                                <Label Text="{Binding Status, StringFormat='Status: {0}'}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{Binding StatusColor}" />

                                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                                    <Button Text="Approve"
                                            BackgroundColor="Green"
                                            TextColor="White"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnApproveClicked"/>
                                    <Button Text="Reject"
                                            BackgroundColor="DarkRed"
                                            TextColor="White"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnRejectClicked"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
