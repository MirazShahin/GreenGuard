<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.UpdateTreePage"
             BackgroundColor="#1E1E1E"
             Title="Update Tree">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">

			<Label Text="🌳 Update Tree"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

			<!-- Tree Picker -->
			<Picker x:Name="TreePicker"
                    Title="Select a tree to update"
                    TextColor="White"
                    TitleColor="Gray"
                    BackgroundColor="#2A2A2A"
                    SelectedIndexChanged="OnTreeSelected"/>

			<!-- Tree Name -->
			<Entry x:Name="TreeNameEntry"
                   Placeholder="Tree Name"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Description -->
			<Editor x:Name="TreeDescriptionEditor"
                    Placeholder="Tree Description"
                    PlaceholderColor="Gray"
                    TextColor="White"
                    BackgroundColor="#2A2A2A"
                    AutoSize="TextChanges"
                    HeightRequest="100"/>

			<!-- Price -->
			<Entry x:Name="TreePriceEntry"
                   Placeholder="Tree Price"
                   Keyboard="Numeric"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Stock -->
			<Entry x:Name="TreeStockEntry"
                   Placeholder="Tree Stock"
                   Keyboard="Numeric"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Buttons -->
			<Button Text="Update Tree"
                    BackgroundColor="#FF3366"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnUpdateTreeClicked"/>

			<Button Text="Cancel"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnCancelClicked"/>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
