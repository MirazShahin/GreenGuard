<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GreenGuard.Views.PersonalContributionHistoryPage"
    BackgroundColor="#1E1E1E"
    Title="My Contributions">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="💰 My Tree Purchase History"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="LightGreen"
                   HorizontalOptions="Center"/>

            <Label Text="Here you can see all your previous sponsorships and purchases."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- History List -->
            <CollectionView x:Name="HistoryCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16" Margin="0,10">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Emoji}" FontSize="36" HorizontalOptions="Center"/>
                                <Label Text="{Binding TreeName}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="LightGreen"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding Quantity, StringFormat='Quantity: {0}'}"
                                       FontSize="14"
                                       TextColor="White"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalPrice, StringFormat='Total: {0} BDT'}"
                                       FontSize="14"
                                       TextColor="Orange"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding PurchaseDate, StringFormat='Date: {0:dd MMM yyyy}'}"
                                       FontSize="12"
                                       TextColor="Gray"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- If no data -->
            <Label x:Name="EmptyLabel"
                   Text="No purchase history yet."
                   TextColor="Gray"
                   FontSize="16"
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <!-- Back Button -->
            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
