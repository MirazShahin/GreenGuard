<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.AdminProjectApprovalPage"
             BackgroundColor="#1E1E1E" 
             Title="Project Approvals">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🗂️ Pending Project Requests"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="LightGreen"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="RequestsCollectionView"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="14"
                               Padding="15"
                               Margin="0,5">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="{Binding ProjectTitle}"
                                       FontSize="18"
                                       TextColor="LightGreen"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding RequestedBy}"
                                       TextColor="SkyBlue"
                                       FontSize="14" />
                                <Label Text="{Binding Zone}"
                                       TextColor="Gray"
                                       FontSize="14" />
                                <Label Text="{Binding TreeType}"
                                       TextColor="White"
                                       FontSize="14" />
                                <Label Text="{Binding QuantityDisplay}"
                                       TextColor="Orange"
                                       FontSize="14" />

                                <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                                    <Button Text="✅ Approve"
                                            BackgroundColor="Teal"
                                            TextColor="White"
                                            CornerRadius="20"
                                            WidthRequest="100"
                                            Clicked="OnApproveClicked" />
                                    <Button Text="❌ Reject"
                                            BackgroundColor="DarkRed"
                                            TextColor="White"
                                            CornerRadius="20"
                                            WidthRequest="100"
                                            Clicked="OnRejectClicked" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
