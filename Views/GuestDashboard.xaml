<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.GuestDashboard"
             BackgroundColor="#1E1E1E"
             Title="Guest Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Available Trees"
                   FontSize="26"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <CollectionView x:Name="TreeCollectionView" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray"
                               CornerRadius="12"
                               Padding="12"
                               Margin="5"
                               BackgroundColor="#2A2A2A">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="LightGreen"/>
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="White"/>
                                <Label Text="{Binding Price, StringFormat='Price: {0} BDT'}"
                                       FontSize="14"
                                       TextColor="LightGray"/>
                                <HorizontalStackLayout>
                                    <Label Text="Quantity:"
                                           TextColor="White"
                                           VerticalOptions="Center"/>
                                    <Entry Placeholder="1"
                                           Keyboard="Numeric"
                                           WidthRequest="60"
                                           TextColor="Black"
                                           BackgroundColor="White"
                                           Text="{Binding Quantity, Mode=TwoWay}"/>
                                </HorizontalStackLayout>
                                <Button Text="Buy Tree"
                                        BackgroundColor="#FF3366"
                                        TextColor="White"
                                        CornerRadius="20"
                                        HeightRequest="40"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnBuyTreeClicked"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Back"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,20,0,0"
                    Clicked="OnLogoutClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
