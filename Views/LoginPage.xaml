<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GreenGuard.Views.LoginPage"
    BackgroundColor="#1E1E1E"
    Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25">

            <Label Text="🌿 Welcome to GreenGuard"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="LightGreen"
                   HorizontalOptions="Center"/>

            <!-- Internal Users -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Internal Users"
                           FontSize="20"
                           TextColor="LightGreen"
                           FontAttributes="Bold"/>

                    <Picker x:Name="InternalRolePicker"
                            Title="Select Role"
                            TextColor="White"
                            TitleColor="Gray"
                            BackgroundColor="#333333">
                        <Picker.Items>
                            <x:String>Admin</x:String>
                            <x:String>Leader</x:String>
                            <x:String>Volunteer</x:String>
                        </Picker.Items>
                    </Picker>

                    <Entry x:Name="InternalEmailEntry"
                           Placeholder="Enter Email"
                           TextColor="White"
                           PlaceholderColor="Gray"
                           BackgroundColor="#444444"/>

                    <Entry x:Name="InternalPasswordEntry"
                           Placeholder="Enter Password"
                           IsPassword="True"
                           TextColor="White"
                           PlaceholderColor="Gray"
                           BackgroundColor="#444444"/>

                    <Button Text="Login (Internal Portal)"
                            BackgroundColor="Teal"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnInternalLoginClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- External Users -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16">
                <VerticalStackLayout Spacing="10">
                    <Label Text="External Users"
                           FontSize="20"
                           TextColor="LightSkyBlue"
                           FontAttributes="Bold"/>

                    <Picker x:Name="ExternalRolePicker"
                            Title="Select Role"
                            TextColor="White"
                            TitleColor="Gray"
                            BackgroundColor="#333333">
                        <Picker.Items>
                            <x:String>NGO</x:String>
                            <x:String>Personal User</x:String>
                        </Picker.Items>
                    </Picker>

                    <Entry x:Name="ExternalEmailEntry"
                           Placeholder="Enter Email"
                           TextColor="White"
                           PlaceholderColor="Gray"
                           BackgroundColor="#444444"/>

                    <Entry x:Name="ExternalPasswordEntry"
                           Placeholder="Enter Password"
                           IsPassword="True"
                           TextColor="White"
                           PlaceholderColor="Gray"
                           BackgroundColor="#444444"/>

                    <Button Text="Login (External Portal)"
                            BackgroundColor="MediumPurple"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnExternalLoginClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Signup -->
            <Label Text="Don't have an account? Signup here"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSignupTapped"/>
                </Label.GestureRecognizers>
            </Label>

            <!-- Guest Option -->
            <Label Text="────────  OR  ────────"
                   TextColor="Gray"
                   FontSize="12"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

            <Button Text="Continue as Guest"
                    BackgroundColor="#2A2A2A"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnGuestClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
