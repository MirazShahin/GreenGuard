<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.NotificationsPage"
             BackgroundColor="#1E1E1E"
             Title="Send Notifications">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">

			<!-- Header -->
			<Label Text="🔔 Send Notification"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

			<!-- Receiver Type -->
			<Picker x:Name="ReceiverPicker"
                    Title="Select Receiver"
                    SelectedIndexChanged="OnReceiverChanged"
                    TextColor="White"
                    TitleColor="Gray"
                    BackgroundColor="#2A2A2A">
				<Picker.Items>
					<x:String>All Leaders</x:String>
					<x:String>All Volunteers</x:String>
					<x:String>Specific Leader</x:String>
					<x:String>Specific Volunteer</x:String>
				</Picker.Items>
			</Picker>

			<!-- Specific Person Picker (only for Specific Leader/Volunteer) -->
			<Picker x:Name="PersonPicker"
                    IsVisible="False"
                    Title="Select Person"
                    TextColor="White"
                    TitleColor="Gray"
                    BackgroundColor="#2A2A2A"/>

			<!-- Subject -->
			<Entry x:Name="SubjectEntry"
                   Placeholder="Subject"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Message -->
			<Editor x:Name="MessageEditor"
                    Placeholder="Enter your message"
                    PlaceholderColor="Gray"
                    TextColor="White"
                    BackgroundColor="#2A2A2A"
                    AutoSize="TextChanges"
                    HeightRequest="120"/>

			<!-- Buttons -->
			<Button Text="Send"
                    BackgroundColor="#FF3366"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnSendClicked"/>

			<Button Text="Cancel"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnCancelClicked"/>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
