<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.AddTreePage"
             BackgroundColor="#1E1E1E"
             Title="Add New Tree">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="🌱 Add New Tree"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Entry x:Name="TreeNameEntry"
                   Placeholder="Enter tree name"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>
            <Editor x:Name="TreeDescriptionEditor"
                    Placeholder="Enter description"
                    PlaceholderColor="Gray"
                    TextColor="White"
                    BackgroundColor="#2A2A2A"
                    AutoSize="TextChanges"
                    HeightRequest="100"/>
            <Entry x:Name="TreePriceEntry"
                   Placeholder="Enter price"
                   Keyboard="Numeric"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>
            <Entry x:Name="TreeStockEntry"
                   Placeholder="Enter available stock"
                   Keyboard="Numeric"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>
            <Button Text="Save Tree"
                    BackgroundColor="#FF3366"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnSaveTreeClicked"/>
            <Button Text="Cancel"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnCancelClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
