<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.TreeRequirementUpdatePage"
             BackgroundColor="#1E1E1E"
             Title="Tree Requirement Update">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">

			<Label Text="📌 Tree Requirement Update"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

			<!-- Zone -->
			<Entry x:Name="ZoneEntry"
                   Placeholder="Enter Zone / Area"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Project -->
			<Entry x:Name="ProjectEntry"
                   Placeholder="Enter Project Name"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Tree Type -->
			<Entry x:Name="TreeTypeEntry"
                   Placeholder="Enter Required Tree Type"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Number of Trees -->
			<Entry x:Name="TreeCountEntry"
                   Placeholder="Number of Trees Needed"
                   Keyboard="Numeric"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="#2A2A2A"/>

			<!-- Required Date -->
			<DatePicker x:Name="RequirementDatePicker"
                        TextColor="White"
                        BackgroundColor="#2A2A2A"
                        Format="dd MMM yyyy"/>

			<!-- Buttons -->
			<Button Text="✅ Submit Requirement"
                    BackgroundColor="Teal"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnSubmitClicked"/>

			<Button Text="Cancel"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnCancelClicked"/>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
