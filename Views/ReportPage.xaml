<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.ReportPage"
             BackgroundColor="#1E1E1E"
             Title="Zone Report">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Label Text="📊 Zone Plantation Report"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Zone Info -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label x:Name="ZoneNameLabel"
                           Text="Zone: A"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold"/>
                    <Label x:Name="TotalTreesLabel"
                           Text="Total Trees: 0"
                           FontSize="16"
                           TextColor="Orange"/>
                    <Label x:Name="HealthyTreesLabel"
                           Text="Healthy Trees: 0"
                           FontSize="16"
                           TextColor="LightGreen"/>
                    <Label x:Name="UnhealthyTreesLabel"
                           Text="Unhealthy Trees: 0"
                           FontSize="16"
                           TextColor="Red"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Tree Category Report -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="10" Padding="10">
                <Label Text="🌱 Trees by Category"
                       FontSize="18"
                       TextColor="LightBlue"
                       FontAttributes="Bold"/>
                <CollectionView x:Name="CategoryCollectionView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout Spacing="15">
                                <Label Text="{Binding Category}"
                                       FontSize="16"
                                       TextColor="White"/>
                                <Label Text="{Binding Count}"
                                       FontSize="16"
                                       TextColor="Orange"/>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

            <!-- Back -->
            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
