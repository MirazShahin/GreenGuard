<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.TreeAnalysisPage"
             BackgroundColor="#1E1E1E"
             Title="Tree Type Analysis">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="📊 Tree Type Analysis"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Report List -->
            <CollectionView x:Name="AnalysisCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5" BackgroundColor="#2A2A2A">
                            <VerticalStackLayout>
                                <Label Text="{Binding Type}" 
                                       FontSize="18" 
                                       TextColor="LightGreen" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding SoldDisplay}" 
                                       FontSize="14" 
                                       TextColor="Orange"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Back Button -->
            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
