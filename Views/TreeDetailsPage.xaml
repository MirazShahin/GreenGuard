<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.TreeDetailsPage"
             BackgroundColor="#1E1E1E"
             Title="Tree Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Title -->
            <Label Text="Tree Details"
                   FontSize="26"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Tree Name -->
            <Frame CornerRadius="10" Padding="10" HasShadow="False"
                   BorderColor="Gray" BackgroundColor="#2A2A2A">
                <Entry x:Name="TreeNameEntry"
                       Placeholder="Tree Name"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Location -->
            <Frame CornerRadius="10" Padding="10" HasShadow="False"
                   BorderColor="Gray" BackgroundColor="#2A2A2A">
                <Entry x:Name="LocationEntry"
                       Placeholder="Location"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Health Status -->
            <Frame CornerRadius="10" Padding="10" HasShadow="False"
                   BorderColor="Gray" BackgroundColor="#2A2A2A">
                <Entry x:Name="HealthEntry"
                       Placeholder="Health Status"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Buy Button (Visible for all including Guest) -->
            <Button Text="Buy Tree"
                    BackgroundColor="#FF3366"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,10,0,0"/>

            <!-- Update Button (hidden if Guest) -->
            <Button x:Name="UpdateTreeButton"
                    Text="Update Tree"
                    BackgroundColor="Orange"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnUpdateTreeClicked"/>

            <!-- Back Button -->
            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
