<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.VolunteerDashboard"
             BackgroundColor="#1E1E1E"
             Title="Volunteer Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🙋 Volunteer Dashboard"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Plantation Update -->
            <Button Text="🌱 Plantation Update"
                    BackgroundColor="Teal"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnPlantationUpdateClicked"/>

            <!-- Tree Request -->
            <Button Text="📩 Request Trees"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnTreeRequestClicked"/>

            <!-- Tree Requirement Update -->
            <Button Text="📌 Update Tree Requirement"
                    BackgroundColor="Purple"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnRequirementUpdateClicked"/>

            <!-- Volunteer History -->
            <Button Text="📜 My History"
                    BackgroundColor="DarkOrange"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnHistoryClicked"/>

            <!-- Message Leader -->
            <Button Text="📩 Message Leader"
                    BackgroundColor="MediumPurple"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnMessageClicked"/>

            <!-- Logout -->
            <Button Text="Logout"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnLogoutClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
