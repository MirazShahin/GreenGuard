<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.BrowseProjectsPage"
             BackgroundColor="#1E1E1E"
             Title="Browse Projects">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🌳 Active Plantation Projects"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="ProjectsCollectionView"
                            SelectionMode="Single"
                            SelectionChanged="OnProjectSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="14"
                               Padding="15"
                               Margin="0,5"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Title}"
                                       FontSize="20"
                                       TextColor="LightGreen"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Description}"
                                       TextColor="LightGray"
                                       FontSize="14" />
                                <Label Text="{Binding Location}"
                                       TextColor="SkyBlue"
                                       FontSize="14" />
                                <Label Text="Tap to view details"
                                       TextColor="Gray"
                                       FontSize="12"
                                       HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
