<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.SalesSummaryPage"
             BackgroundColor="#1E1E1E"
             Title="Sales Summary">

    <!-- Only ONE root content allowed -->
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="📊 Sales Summary"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Total Sold -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="10" Padding="15">
                <Label x:Name="TotalSoldLabel"
                       FontSize="18"
                       TextColor="White" />
            </Frame>

            <!-- Total Income -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="10" Padding="15">
                <Label x:Name="TotalIncomeLabel"
                       FontSize="18"
                       TextColor="White" />
            </Frame>

            <!-- Top Selling Tree -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="10" Padding="15">
                <Label x:Name="TopTreeLabel"
                       FontSize="18"
                       TextColor="White" />
            </Frame>

            <!-- Category-wise Sales -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Category-wise Sales"
                           FontSize="20"
                           TextColor="LightGreen"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <CollectionView x:Name="CategorySalesCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="15">
                                    <Label Text="{Binding Category}"
                                           FontSize="16"
                                           TextColor="White" />
                                    <Label Text="{Binding SoldText}"
                                           FontSize="16"
                                           TextColor="Orange" />
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Back Button -->
            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
