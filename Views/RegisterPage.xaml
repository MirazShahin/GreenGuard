<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.RegisterPage"
             BackgroundColor="#1E1E1E"
             Title="Register">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Create Account"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="LightGreen"
                   Margin="0,20,0,10"/>

            <!-- Name -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="#2A2A2A">
                <Entry x:Name="NameEntry"
                       Placeholder="Full Name"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Username -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="#2A2A2A">
                <Entry x:Name="UsernameEntry"
                        Placeholder="Username"
                        TextColor="White"
                        PlaceholderColor="LightGray"
                        BackgroundColor="Transparent"/>
            </Frame>

            <!-- Email -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="#2A2A2A">
                <Entry x:Name="EmailEntry"
                       Placeholder="Email Address"
                       Keyboard="Email"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Password -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="#2A2A2A">
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Confirm Password -->
            <Frame CornerRadius="10" Padding="10" BackgroundColor="#2A2A2A">
                <Entry x:Name="ConfirmPasswordEntry"
                       Placeholder="Confirm Password"
                       IsPassword="True"
                       TextColor="White"
                       PlaceholderColor="LightGray"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Role Picker -->
            <Frame CornerRadius="10" Padding="5" BackgroundColor="White">
                <Picker x:Name="UserTypePicker" Title="Select User Type" TextColor="Black">
                    <Picker.Items>
                        <x:String>Admin</x:String>
                        <x:String>Leader</x:String>
                        <x:String>Volunteer</x:String>
                        <x:String>Sponsor</x:String>
                        <!-- 👈 Added New Role -->
                    </Picker.Items>
                </Picker>
            </Frame>

            <!-- Buttons -->
            <Button Text="Register"
                    BackgroundColor="Teal"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Clicked="OnRegisterClicked"/>

            <Button Text="Back to Login"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
