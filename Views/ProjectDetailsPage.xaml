<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.ProjectDetailsPage"
             BackgroundColor="#1E1E1E"
             Title="Project Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Project Title -->
            <Label x:Name="TitleLabel"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="LightGreen"
                   HorizontalOptions="Center" />

            <!-- Project Description -->
            <Label x:Name="DescriptionLabel"
                   TextColor="White"
                   FontSize="16"
                   LineBreakMode="WordWrap" />

            <!-- Location -->
            <Label x:Name="LocationLabel"
                   TextColor="SkyBlue"
                   FontSize="14"
                   FontAttributes="Bold"
                   Margin="0,5,0,10" />

            <!-- Optional Image (Future: Project photo) -->
            <Image x:Name="ProjectImage"
                   Source="forest_placeholder.jpg"
                   Aspect="AspectFill"
                   HeightRequest="180"
                   Margin="0,10,0,10" />

            <!-- Support Options -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Support This Project"
                           TextColor="LightGreen"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Button Text="🌳 Request Tree Plantation in this Zone"
                            BackgroundColor="Teal"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnRequestClicked" />
                    <Button Text="💰 Support Financially"
                            BackgroundColor="MediumPurple"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnSupportClicked" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
