<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.AdminVolunteerRequestsPage"
             BackgroundColor="#1E1E1E"
             Title="Volunteer Requests">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🧾 Volunteer Requests from NGOs"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="LightGreen"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="RequestCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16" Margin="0,10">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Subject}"
                                       TextColor="LightGreen"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Body}"
                                       TextColor="White"
                                       FontSize="14"/>
                                <Label Text="{Binding Time}"
                                       TextColor="Gray"
                                       FontSize="12"
                                       HorizontalOptions="End"/>

                                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,10,0,0">
                                    <Button Text="✅ Approve"
                                            BackgroundColor="Green"
                                            TextColor="White"
                                            CornerRadius="20"
                                            Clicked="OnApproveClicked"
                                            CommandParameter="{Binding .}"/>

                                    <Button Text="❌ Reject"
                                            BackgroundColor="Crimson"
                                            TextColor="White"
                                            CornerRadius="20"
                                            Clicked="OnRejectClicked"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
