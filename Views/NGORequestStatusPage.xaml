<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GreenGuard.Views.NGORequestStatusPage"
    BackgroundColor="#1E1E1E"
    Title="Request Status">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="📋 My Plantation Requests"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="RequestCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16" Margin="0,10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Zone}" FontSize="18" TextColor="LightGreen" FontAttributes="Bold"/>
                                <Label Text="{Binding Location}" FontSize="14" TextColor="White"/>
                                <Label Text="{Binding TreeType}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding TreeCount, StringFormat='Trees: {0}'}" FontSize="14" TextColor="Orange"/>
                                <Label Text="{Binding Status, StringFormat='Status: {0}'}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{Binding StatusColor}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
